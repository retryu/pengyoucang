<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2e96df"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/Img_Logo"
        android:layout_width="105dip"
        android:layout_height="50dip"
        android:background="@drawable/logo" />

    <ImageView
        android:id="@+id/Img_Profile"
        android:layout_width="29dip"
        android:layout_height="39dip"
        android:layout_alignBottom="@id/Img_Logo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:src="@drawable/profile" />

    <LinearLayout
        android:id="@+id/Layout_Menu"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:layout_below="@id/Img_Profile" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/Img_Upload"
                android:layout_width="70dip"
                 android:layout_centerHorizontal="true"
                android:layout_height="55dip"
                android:background="@drawable/upload" />

            <TextView
                android:id="@+id/Tv_Upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Img_Upload"
                android:layout_centerHorizontal="true"
                android:text="@string/upload"
                android:textColor="@color/menu_text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/Img_Friend"
                android:layout_width="70dip"
                android:layout_height="55dip"
                android:layout_centerHorizontal="true"
                android:background="@drawable/friendslist" />

            <TextView
                android:id="@+id/Tv_Friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Img_Friend"
                android:layout_centerHorizontal="true"
                android:text="@string/frined"
                android:textColor="@color/menu_text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/Img_Download"
                android:layout_width="70dip"
                android:layout_height="55dip"
                android:layout_centerHorizontal="true"
                android:background="@drawable/download" />

            <TextView
                android:id="@+id/Tv_Download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Img_Download"
                android:layout_centerHorizontal="true"
                android:text="@string/Download"
                android:textColor="@color/menu_text_color" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Layout_Content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dip"
        android:layout_below="@id/Layout_Menu" >
    </RelativeLayout>

</RelativeLayout>