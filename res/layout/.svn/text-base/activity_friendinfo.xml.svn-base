<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/Btn_Frined"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        android:text="@string/friend_update" />

    <Button
        android:id="@+id/Btn_AddFriend"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:layout_below="@id/Btn_Frined"
        android:layout_centerHorizontal="true"
        android:text="@string/add_friend" />

    <Button
        android:id="@+id/Btn_Recomond"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:layout_below="@id/Btn_AddFriend"
        android:layout_centerHorizontal="true"
        android:text="@string/msg_update" />

</RelativeLayout>