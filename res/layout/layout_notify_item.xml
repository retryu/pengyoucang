<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="#f8fcff"
    android:orientation="vertical"
    android:padding="1px" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#97cbf0" >
    </RelativeLayout>

    <TextView
        android:id="@+id/Tv_Item_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:text="@string/Download"
        android:textColor="#4d87ad" />

    <RelativeLayout
        android:id="@+id/Layout_Notify"
        android:layout_width="28dip"
        android:layout_height="22dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dip"
        android:layout_toRightOf="@id/Tv_Item_Name" 
         android:background="@drawable/circle_pop"
        >
	
        <TextView
            android:id="@+id/Tv_Item_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1"
            android:textColor="#ffffff" />
    </RelativeLayout>
    
    <ImageView 
        android:layout_width="9dip"
        android:layout_height="19dip"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dip"
        />
    
    

</RelativeLayout>