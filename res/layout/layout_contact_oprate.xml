<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/Layout_Alert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
   
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="暂无联系人号码" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Layout_Phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/Layout_Cell1"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/Tv_Number1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="80dip"
                android:background="@drawable/btn_call_bg"
                android:text="@string/call"
                android:textColor="#ccc" />

            <ImageView
                android:id="@+id/Img_Phone1"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dip"
                android:src="@drawable/message" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Layout_Cell2"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@id/Layout_Cell1"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/Tv_Number1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="80dip"
                android:background="@drawable/btn_call_bg"
                android:text="@string/call"
                android:textColor="#ccc" />

            <ImageView
                android:id="@+id/Img_Phone1"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dip"
                android:src="@drawable/message" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>