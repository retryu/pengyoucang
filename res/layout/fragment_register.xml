<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custome="http://schemas.android.com/apk/res/com.hengtiansoft.cloudcontact"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2e96df"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/Layout_HeadImg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >

        <ImageView
            android:id="@+id/Img_Logo"
            android:layout_width="105dip"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Layotu_Table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Layout_HeadImg" >

        
        
          <com.widget.HeadEditText
            android:id="@+id/He_Email"
            custome:name="邮箱"
             android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@id/Tv_Head"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="15dip"
            custome:context_color="@color/register_context_color" >
        </com.widget.HeadEditText>
      

        <com.widget.HeadEditText
            android:id="@+id/He_PassWord"
            custome:name="密码"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@id/He_Email"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="-1dip"
                custome:password="true"
            custome:context_color="@color/register_context_color" >
        </com.widget.HeadEditText>

        <com.widget.HeadEditText
            android:id="@+id/He_Sure_PassWord"
            custome:name="确认密码"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@id/He_PassWord"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="-1dip"
                custome:password="true"
            custome:context_color="@color/register_context_color" >
        </com.widget.HeadEditText>
        <com.widget.HeadEditText
              android:id="@+id/He_Mobile"
            custome:name="手机"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@id/He_Sure_PassWord"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="10dip"
            custome:context_color="@color/register_context_color" >
        </com.widget.HeadEditText>

          
        
           <com.widget.HeadEditText
             android:id="@+id/He_UserName"
            custome:name="@string/nicheng"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@id/He_Mobile"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="-1dip"
            custome:context_color="@color/register_context_color" >
        </com.widget.HeadEditText>
       
    </RelativeLayout>

    <Button
        android:id="@+id/Btn_Continue"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_below="@id/Layotu_Table"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/register_button_unpress"
        android:text="@string/continue_e"
        android:textColor="#CCC" />

</RelativeLayout>